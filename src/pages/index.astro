---
import BaseLayout from '../layouts/BaseLayout.astro';
// bioについて
import Social from '../components/Social.astro';
import * as bio from '../markdowns/index/bio.md';
// news
import * as news from '../markdowns/index/news.md';
// publications 
import * as publications from '../markdowns/index/publications.md';

const pageTitle = "";
---
<BaseLayout pageTitle={pageTitle}>
  <div id='bio'>
    <div class='content'>
      <div class='description'><Fragment set:html={bio.compiledContent()} /></div>
      <div class='social_large_window'>
        Email: kk929@cornell.edu
        <Social />
      </div>
    </div>
    
    <div class='profile'>
      <img src="/images/me_mt.jpg" alt="me" style="height:240px;">
      <div class='social_small_window'>
        Email: kk929@cornell.edu
        <div><Social /></div>
      </div>
    </div>
    
  </div>

  <div id='news'>
    <div class='content'><Fragment set:html={news.compiledContent()} /></div>
  </div>

  <div id='publications'>
    <div class='content'><Fragment set:html={publications.compiledContent()} /></div>
  </div>

</BaseLayout>


<style lang="scss">
#bio {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  // align-items: center;
  margin-bottom: 2rem;
  .content {
    width: 70%;
    margin-right: 1rem;
    display:flex;
    flex-flow: column;
    justify-content: space-between;
  }
  .profile {
    img {
      border-radius: 5%;
    }
    .social_small_window {
      display: none;
    }
  }
}

@media screen and (max-width: 700px) {
/* 768pxまでの幅の場合に適応される */
#bio {
    display: flex;
    flex-direction: column-reverse;
    .content {
      width: 100%;
      margin-right: 0;
      .social_large_window{
        display: none;
      }
    }
    .profile {
      width: 100%;
      text-align: center;
      .social_small_window {
        text-align: center;
        display: flex;
        flex-flow: column;
        align-items: center;
      }
    }
  }
}
</style>